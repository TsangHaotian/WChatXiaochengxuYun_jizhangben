
/* 类型列表 - 带科幻高亮的圆形图标 */
.booktype_wrapper {
  width: 100%;
  padding: 90rpx 50rpx 520rpx;
}

.booktype_wrapper.padding {
  padding-bottom: 520rpx;
}

.booktype_item {
  float: left;
  margin: 18rpx 22rpx 0;
  width: 112rpx;
  height: 160rpx;
}

.booktype_image_wrapper {
  padding: 22rpx;
  box-sizing: border-box;
  width: 112rpx;
  height: 112rpx;
  background: radial-gradient(circle at 30% 0%, #22d3ee 0, #020617 70%);
  border-radius: 32rpx;
  box-shadow: 0 0 20rpx rgba(56, 189, 248, 0.65);
  border: 1rpx solid rgba(56, 189, 248, 0.5);
}

.booktype_item.active .booktype_image_wrapper {
  background: radial-gradient(circle at 0 0, #a855f7 0, #020617 75%);
  box-shadow: 0 0 26rpx rgba(168, 85, 247, 0.85);
  border-color: rgba(168, 85, 247, 0.85);
}

.booktype_image_wrapper image {
  display: block;
  width: 66rpx;
  height: 66rpx;
}

.booktype_item text {
  display: block;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  color: #E5E7EB;
}

/* 顶部 收支切换条 */
.padding_80 {
  width: 100%;
  height: 80rpx;
}

.tabs_wrapper {
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background: #000000;  /* 纯黑色背景 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  z-index: 100;
  color: #ffffff;  /* 确保文字颜色为白色 */
}

.tabs_wrapper text {
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 12rpx;
  font-size: 28rpx;
  text-align: center;
  color: #9CA3AF;
  border-radius: 999rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.tabs_wrapper text.active {
  color: #E5E7EB;
  border-color: rgba(56, 189, 248, 0.9);
  box-shadow: 0 0 22rpx rgba(56, 189, 248, 0.9);
  background: linear-gradient(135deg, #22d3ee, #4f46e5);
}

/* 键盘区域 - 半圆角科幻面板 */
.keyboard_wrapper {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 520rpx;
  background: rgba(15, 23, 42, 0.98);
  border-radius: 28rpx 28rpx 0 0;
  box-shadow: 0 -18rpx 40rpx rgba(15, 23, 42, 0.95);
  z-index: 90;
}

.keyboard_top {
  width: 100%;
  height: 110rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
}

.keyboard_remark {
  display: flex;
  align-items: center;
  flex: 1;
  max-width: 400rpx;
}

.keyboard_remark image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 14rpx;
}

.keyboard_remark input {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 18rpx;
  border-radius: 999rpx;
  background: rgba(15, 23, 42, 0.9);
  border: 1rpx solid rgba(55, 65, 81, 0.9);
  color: #E5E7EB;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.keyboard_remark input:focus {
  border-color: rgba(56, 189, 248, 0.9);
  box-shadow: 0 0 10rpx rgba(56, 189, 248, 0.5);
}

.keyboard_amt {
  padding-right: 10rpx;
  box-sizing: border-box;
  width: 260rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 40rpx;
  text-align: right;
  color: #F97373;
  font-weight: 600;
}

.keyboard_bottom {
  width: 100%;
  padding: 0 10rpx 10rpx;
  box-sizing: border-box;
  height: 400rpx;
}

.keyboard_item {
  float: left;
  box-sizing: border-box;
  width: 25%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 36rpx;
  text-align: center;
  color: #E5E7EB;
  border-radius: 20rpx;
  margin: 6rpx 4rpx;
  background: rgba(15, 23, 42, 0.9);
  border: 1rpx solid rgba(31, 41, 55, 0.9);
  box-shadow: 0 0 14rpx rgba(15, 23, 42, 0.9);
  transition: all 0.15s ease;
}

.keyboard_item:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.keyboard_item:nth-child(4n) {
  margin-right: 6rpx;
}

.keyboard_item.date {
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.keyboard_item.date image {
  display: inline-block;
  margin-right: 8rpx;
  width: 30rpx;
  height: 30rpx;
}

.keyboard_item.del image {
  display: block;
  margin: 26rpx auto;
  width: 56rpx;
  height: 56rpx;
}

.keyboard_item.btn {
  background: linear-gradient(135deg, #22d3ee, #4f46e5);
  border: none;
  box-shadow: 0 0 26rpx rgba(56, 189, 248, 0.9);
  font-size: 32rpx;
  font-weight: 500;
}

.keyboard_item.plan {
  font-size: 24rpx;
  color: #9CA3AF;
}

/* 备注推荐条 */
.remark_tips {
  position: absolute;
  left: 0;
  top: -60rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  background: linear-gradient(90deg, rgba(15, 23, 42, 0.9), rgba(30, 64, 175, 0.75));
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
}

.remark_tips text {
  float: left;
  margin-right: 20rpx;
  color: #E5E7EB;
}

.remark_tips .remark_tip {
  display: inline-block;
  margin: 10rpx 10rpx 0 0;
  padding: 0 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  background: rgba(15, 23, 42, 0.96);
  color: #E5E7EB;
  border-radius: 30rpx;
  border: 1rpx solid rgba(56, 189, 248, 0.7);
  transition: all 0.2s ease;
}

.remark_tips .remark_tip:active {
  background: rgba(56, 189, 248, 0.3);
  transform: scale(0.96);
}

/* 添加按钮样式 */
.add-btn-container {
  position: fixed;
  bottom: 60rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  z-index: 100;
}

.add-btn {
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: white;
  background: linear-gradient(135deg, #22d3ee, #4f46e5);
  border-radius: 45rpx;
  font-size: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(56, 189, 248, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  outline: none;
  transition: all 0.2s ease;
}

.add-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.add-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
  font-weight: bold;
}
