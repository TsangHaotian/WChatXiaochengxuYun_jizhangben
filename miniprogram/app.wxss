.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #0f172a;  /* 深色主题背景色 */
  color: #e2e8f0;  /* 默认文字颜色 */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}